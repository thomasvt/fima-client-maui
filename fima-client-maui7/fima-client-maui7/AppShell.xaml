<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="fima_client_maui7.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:fima_client_maui7"
    Shell.FlyoutBehavior="Locked">

    <Shell.FlyoutHeader>
        <Label Text="FIMA poc"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </Shell.FlyoutHeader>

    <ShellItem Title="GPS">
        <ShellContent ContentTemplate="{DataTemplate local:GpsPage}" />
    </ShellItem>

    <ShellItem Title="Security">
        <ShellContent ContentTemplate="{DataTemplate local:SecurityPage}" />
    </ShellItem>

    <ShellItem Title="Take Photo">
        <ShellContent ContentTemplate="{DataTemplate local:PhotoPage}" />
    </ShellItem>
    

</Shell>
